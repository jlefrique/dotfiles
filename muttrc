# ~/.muttrc

set header_cache=~/.mutt/hcache

# Include external files
source ~/.mutt/muttrc-common
source ~/.mutt/muttrc-colors

# A list of mailboxes is generated by offlineimap in ~/.mutt/mailboxes.
# If this file is not found, mutt uses IMAP directly.
source `MBOX=$HOME/.mutt/mailboxes;\
        if [ ! -s "$MBOX" ]; then echo "$HOME/.mutt/muttrc-imap";\
        else echo "$MBOX"; fi;`

push <show-version>
