[user]
    name = Julien Lefrique
    email = julien.lefrique@gmail.com

[alias]
    st = status
    br = branch
    ci = commit
    di = diff
    dc = diff --cached
    co = checkout
    sb = show-branch
    cp = cherry-pick
    out = !git fetch && git log FETCH_HEAD..
    in = !git fetch && git log ..FETCH_HEAD
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
    sbt = log --simplify-by-decoration --pretty=oneline --decorate --abbrev-commit --all
    root = rev-parse --show-toplevel
    ctags = !.git/hooks/ctags
    unpublish = push origin --delete
    dt = difftool --dir-diff

[color]
    # Turn on color
    ui = auto

[core]
    autocrlf = input

[push]
    default = simple

[init]
    templatedir = ~/dotfiles/git_template

[merge]
    tool = meld

[diff]
    tool = meld
