#include ".xrdb/tango.xrdb"

#ifdef COLOR
  *customization:
#endif

! fonts ---------------------------------------------------------------------
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

! urxvt terminal ------------------------------------------------------------
URxvt*font: xft:terminus:size=10
URxvt*boldFont: xft:terminus:bold:size=10
URxvt*italicFont: xft:terminus:italic:pixelsize=10
URxvt*boldItalicFont: xft:terminus:bold:italic:pixelsize=10

URxvt*scrollBar: false
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

URxvt*fading: 5%
URxvt*fadeColor: grey

URxvt*foreground: COLOR_FG
URxvt*background: COLOR_BG

! Make URLs clickable
URxvt*perl-ext-common: default,matcher
URxvt*urlLauncher: /usr/bin/firefox
URxvt*matcher.button: 1
URxvt*colorUL: COLOR_TERM_LIGHT_BLUE

URxvt*urgentOnBell: true
URxvt*visualBell: false

! xterm terminal ------------------------------------------------------------
XTerm*faceName: Terminus
XTerm*faceSize: 10

XTerm*foreground: COLOR_FG
XTerm*background: COLOR_BG

! terminal colors -----------------------------------------------------------

! Black
*color0: COLOR_TERM_BLACK
*color8: COLOR_TERM_DARK_GRAY
! Red
*color1: COLOR_TERM_DARK_RED
*color9: COLOR_TERM_LIGHT_RED
! Green
*color2: COLOR_TERM_DARK_GREEN
*color10: COLOR_TERM_LIGHT_GREEN
! Yellow
*color3: COLOR_TERM_DARK_YELLOW
*color11: COLOR_TERM_LIGHT_YELLOW
! Blue
*color4: COLOR_TERM_DARK_BLUE
*color12: COLOR_TERM_LIGHT_BLUE
! Magenta
*color5: COLOR_TERM_DARK_MAGENTA
*color13: COLOR_TERM_LIGHT_MAGENTA
! Cyan
*color6: COLOR_TERM_DARK_CYAN
*color14: COLOR_TERM_LIGHT_CYAN
! White
*color7: COLOR_TERM_LIGHT_GRAY
*color15: COLOR_TERM_WHITE
